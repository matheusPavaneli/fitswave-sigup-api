{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ESNext"
    ],
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "rootDir": "./src",
    "removeComments": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*"
  ]
}